<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/container"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/edit_goal_gradient_dark"
    android:descendantFocusability="beforeDescendants"
    tools:context="co.pennypot.app.EditGoalActivity">

    <TextView
        android:id="@+id/goal_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="$2800"
        android:textSize="@dimen/edit_goal_balance_text"
        android:fontFamily="sans-serif"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/spacer_medium"
        android:text="@string/btn_cancel"
        android:textColor="@color/white_transparent_eighty"
        android:textSize="@dimen/text_size_regular"
        android:fontFamily="sans-serif"
        android:clickable="true"
        android:onClick="onCancelPressed"/>

    <TextView
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/spacer_medium"
        android:text="@string/btn_done"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_regular"
        android:fontFamily="sans-serif"
        android:clickable="true"
        android:onClick="onDonePressed"/>

</RelativeLayout>
